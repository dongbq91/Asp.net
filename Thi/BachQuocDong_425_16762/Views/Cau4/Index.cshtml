
@{
    ViewBag.Title = "Index";
}
<style>
    table, td, th {
        border: 1px solid #ddd;
        text-align: left;
    }

    table {
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
</style>
<h2>Khoa khám</h2>

@Html.ActionLink("Thêm khoa", "Create", "Cau4")
<table border="1px">
    <tr>
        <th colspan ="3">QUẢN LÝ KHOA KHÁM</th>
    </tr>
    <tr>
        
        <th>Mã Khoa</th>
        <th>Tên Khoa</th>
        
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            
            <td>@item.Makhoa</td>
            <td>@item.Tenkhoa</td>
            <td>
                @Html.ActionLink("Chi tiet", "Details", new { id = item.Makhoa.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Makhoa.Trim() })
            </td>
        </tr>
    }
</table>
