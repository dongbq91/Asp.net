
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        label{
            width :120px;
            float :left;
        }
    </style>
</head>
<body>
    <div> 
        <h2>Add two numbers</h2>
        @{
            var total = 0;
            var totalMessage = "";
            if (IsPost)
            {
                var num1 = Request["text1"];
                var num2 = Request["text2"];

                total = num1.AsInt() + num2.AsInt();
                totalMessage = "Total :" + num1 + "+" + num2 + "=" + total;
            }
        }

    <form action=" " method="post">
        <p>
            <label> Nhập sô thứ 1 </label>
            <input type="text" name="text1" />

        </p>
        <p>
            <label> Nhập sô thứ 2 </label>
            <input type="text" name="text2" />
        </p>
        <p>
            <input type="submit" value="add" />
        </p>
        <p> @totalMessage</p>
    </form>
    </div>
</body>
</html>
