
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student</title>
</head>
<body>
    <div>
        <h2> Registon form </h2>
        @using (Html.BeginForm("Regis2", "Bai2"))
        {
    <table border="1" style="border-collapse: collapse" cellpadding="5">
        <tr>
            <td>@Html.Label("First Name")</td>
            <td> @Html.TextBox("firstname")</td>
        </tr>
        <tr>
            <td>@Html.Label("Last Name")</td>
            <td> @Html.TextBox("lastname")</td>
        </tr>
        <tr>
            <td>@Html.Label("Email")</td>
            <td> @Html.TextBox("email")</td>
        </tr>
        <tr>
            <td>@Html.Label("Password")</td>
            <td>@Html.TextBox("password")</td>
        </tr>
        <tr>
            <td>@Html.Label("Address")</td>
            <td>
                @{
                    IEnumerable<string> strad = new List<string>
                                                            {
                                "Hanoi", "Danang","TpHochiminh"
                            };
                }
                @Html.DropDownList("addr", new SelectList(strad, strad.FirstOrDefault()), "--Select--"
               )
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Gender")</td>
            <td>
                @Html.RadioButton("gender", "Male")Male
                @Html.RadioButton("gender", "Female")Female
            </td>

        </tr>

        
        <tr>
            <td> <input type="submit" value="Save" /></td>
            <td> <input type="reset" value="Cancel" /></td>
        </tr>
    </table>
        }
    </div>
</body>
</html>

